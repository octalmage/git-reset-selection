{
  "rules": {
    "indent": ["warn", 2],
    "quotes": ["error", "single"],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"]
  },
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
